extends ../layout

prepend head
  title #{t('account.login')} | #{t('app.name')}

block main
  header= t('account.login')
  form.form-horizontal(method='post', role='form')
    .form-group
      label.col-sm-2.col-md-offset-1.control-label(for='username')= t('account.username')
      .col-sm-5
        input#username.form-control(type='text', name='username', required)
    .form-group
      label.col-sm-2.col-md-offset-1.control-label(for='password')= t('account.password')
      .col-sm-5
        input#password.form-control(type='password', name='password', required)
    .form-group
      .col-sm-offset-3
        button.action-login.btn.btn-lg.btn-primary(type='button')= t('account.login')

prepend sidebar
  .row
    header= t('view.account.no_account')
    a.btn.btn-lg.btn-success(href='/account/signup/')= t('account.signup')

append footer
  script(src='/script/account/login.js')
