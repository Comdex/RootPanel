doctype html
html
  head
    meta(charset='utf-8')
    block head
      link(rel='stylesheet', href='http://cdn.staticfile.org/twitter-bootstrap/3.0.3/css/bootstrap.min.css')
      link(rel='stylesheet', href='/style/layout/layout.css')
  body
    header.navbar-fixed-top
      .container
        nav.navbar.navbar-default.navbar-inverse(role='navigation')
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse')
              span.sr-only= t('view.layout.navigation')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/')= t('app.name')
          #navbar-collapse.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/public/services/') 功能支持
              li
                a(href='/public/wiki/') 用户手册
              li
                a(href='/public/monitor/') 服务器状态
              li
                a(href='//blog.rpvhost.net', target='_blank') 官方博客
            ul.nav.navbar-nav.navbar-right
              if account
                li
                  a= account.username
                li
                  a(href='/panel/')= t('panel.')
                li
                  a#logout(href='/account/logout/')= t('account.logout')
              else
                li
                  a(href='/account/signup/')= t('account.signup')
                li
                  a(href='/account/login/')= t('account.login')

    block content
      #content.container
        .row
          .col-md-9
            #page-alert.alert.alert-danger
            block main

          #sidebar.col-md-3
            block sidebar
              .row
                header= t('app.name')
                p= t('app.description')

    #footer
      script(src='http://cdn.staticfile.org/jquery/2.0.3/jquery.min.js')
      script(src='http://cdn.staticfile.org/twitter-bootstrap/3.0.3/js/bootstrap.min.js')
      script(src='/script/base/ErrorHandle.js')
      script(src='/script/layout/layout.js')
      block footer
